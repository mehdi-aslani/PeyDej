@model PeyDej.Models.Report.DailyStatistic

@{
    ViewData["Title"] = "آمار روزانه جدید";
}


<div class="row">
    <div class="col-6 offset-3">
        <h3 xmlns="http://www.w3.org/1999/html">@ViewData["Title"]</h3>
        <hr/>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-4 offset-8">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input id="date" asp-for="Date" class="form-control text-center"/>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="NumberOfOpenPort" class="control-label"></label>
                <input asp-for="NumberOfOpenPort" class="form-control"/>
                <span asp-validation-for="NumberOfOpenPort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoadingCount" class="control-label"></label>
                <input asp-for="LoadingCount" class="form-control"/>
                <span asp-validation-for="LoadingCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
    $(function(){
        $('#date').datepicker({
            isRTL: true,
            dateFormat: "yy/mm/dd"
        });
    });
   
</script>
}